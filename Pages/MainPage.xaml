<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatApp.MainPage">

    <ScrollView x:Name="InfiniteScroll" Scrolled="OnScroll">
        <VerticalStackLayout>
            <Label Text="The Cat App" FontSize="Header" FontAttributes="Bold" HorizontalTextAlignment="Center" />
            <VerticalStackLayout x:Name="InfiniteScrollContent" Padding="16" Spacing="8" />
            <Label Text="Loading..." FontSize="Subtitle" HorizontalTextAlignment="Center" Padding="8" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
